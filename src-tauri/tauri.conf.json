{
  "$schema": "https://raw.githubusercontent.com/nicegui-project/nicegui/refs/heads/main/nicegui/node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "GitSage",
  "version": "0.1.0",
  "identifier": "com.gitsage.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GitSage",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/larrygogo/gitsage/releases/latest/download/latest.json"
      ],
      "pubkey": "PUBLIC_KEY_HERE"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
